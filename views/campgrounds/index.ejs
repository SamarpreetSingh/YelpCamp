<%- include("../partials/header") %>
<div class="container">

<header class="jumbotron">
<h1>Welcome to Yelpcamp</h1>
<p>Find amazing campgrounds from around the world</p>
<p><a href="/campgrounds/new" class="btn btn-primary btn-large">Create new campground</a></p>
</header>

<div class="row" style="display:flex; flex-wrap:wrap;">
  <% campgrounds.forEach(function(campgrounds){ %>
    <div class="col-sm-6 col-lg-3">
       <div class="card m-2" style="width: 15rem;">
         <img src="<%= campgrounds.image %> " alt="img" width="100%" height="250px">
      <div class="card-body">
         <p class="card-text text-center"><%= campgrounds.name %></p>
         </div>
           <p><a href="/campgrounds/<%=campgrounds._id%>" class="btn btn-primary">Info</a></p>
    </div>
  </div>
<% }) %>
</div>


<%- include("../partials/footer"); %>
