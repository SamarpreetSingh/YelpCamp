<%- include("../partials/header") %>

<div class="container text-center">
  <h1>Welcome to edit route</h1>
  <div style="width: 30%; margin:25px auto;">
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
     <div class="form-group">
       <input class="form-control"type="text" name="campground[name]" placeholder="name" value='<%=campground.name%>'>
     </div>
     <div class="form-group">
       <input class="form-control"type="number" name="campground[price]" placeholder="price" value='<%=campground.price%>'>
     </div>
     <div class="form-group">
      <input class="form-control"type="text" name="campground[image]" placeholder="url" value='<%=campground.image%>'></div>
      <div class="form-group">
        <input class="form-control" type="text" name="campground[description]" placeholder="Description" value='<%=campground.description%>'>
      </div>
      <div class="form-group">
      <button class="btn btn-large btn-danger btn-block" type="submit" name="button">Submit</button></div>
    </form>
  </div>
  <a href="/campgrounds/<%=campground._id%>">Back</a>
<%- include('../partials/footer') %>
