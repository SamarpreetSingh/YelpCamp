<%- include("../partials/header"); %>

<div class="container text-center">
  <h1>Edit the Comment</h1>
  <div style="width: 30%; margin:25px auto;">
    <form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id%>?_method=put" method="post">
     <div class="form-group">
       <input class="form-control"type="text" name="comment[text]" placeholder="text" value="<%= comment.text%>">
     </div>
      <div class="form-group">
      <button class="btn btn-large btn-danger btn-block" type="submit" name="button">Submit</button></div>
    </form>
  </div>
  <a href="/campgrounds">Back</a>
</div>

